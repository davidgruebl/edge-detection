{
  "name": "edge-detection",
  "version": "1.0.0",
  "description": "",
  "main": "./app.js",
  "scripts": {
    "install": "npm run build",
    "build": "browserify ./index.js | uglifyjs -mc > ./build/bundle.js",
    "watch": "watchify ./index.js -o ./build/bundle.js -dv",
    "kill-dev": "ps ax | grep watchify | awk '{print $1}' | xargs kill",
    "dev": "npm run kill-dev && npm run build && npm run watch & browser-sync start --files \"./build/*\" --server \"build\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:davidgruebl/edge_detection.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^1.6.2",
    "browserify": "^6.2.0",
    "browserify-shim": "^3.8.0",
    "capitalize": "^0.5.0",
    "jquery": "^2.1.1",
    "nodemon": "^1.2.1",
    "uglify-js": "^2.4.15"
  },
  "devDependencies": {
    "watchify": "^2.1.0"
  },
  "browser": {
    "pixastic": "./lib/vendor/pixastic/pixastic.core.js",
    "pixastic.laplace": "./lib/vendor/pixastic/actions/laplace.js",
    "pixastic.edges": "./lib/vendor/pixastic/actions/edges.js",
    "pixastic.edges2": "./lib/vendor/pixastic/actions/edges2.js",
    "filters": "./lib/filters.js"
  },
  "browserify-shim": {
    "pixastic": "Pixastic",
    "pixastic.laplace": {
      "depends": [
        "pixastic:Pixastic"
      ]
    },
    "pixastic.edges": {
      "depends": [
        "pixastic:Pixastic"
      ]
    },
    "pixastic.edges2": {
      "depends": [
        "pixastic:Pixastic"
      ]
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
